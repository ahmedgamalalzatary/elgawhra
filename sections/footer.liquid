{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer class="footer" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="footer__container page-width">
    <div class="footer__grid">
      {% comment %} Column 1: Logo + Description + Socials {% endcomment %}
      <div class="footer__column">
        <div class="footer__logo">
          {% if section.settings.footer_logo != blank %}
            <img
              src="{{ section.settings.footer_logo | image_url: width: 150 }}"
              alt="{{ shop.name }}"
              width="150"
              height="auto"
              loading="lazy"
            >
          {% else %}
            <span class="footer__logo-text">{{ shop.name }}</span>
          {% endif %}
        </div>

        <p class="footer__description">{{ section.settings.footer_description | default: "Elgawhra, the Syrian-Egyptian company is distinguished by providing the best types of coffee, chocolate, nuts and snacks" }}</p>

        <div class="footer__socials">
          {% if section.settings.social_insta != blank %}
            <a href="{{ section.settings.social_insta }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Instagram">
          {% else %}
            <span class="footer__social-link">
          {% endif %}
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          {% if section.settings.social_insta != blank %}</a>{% else %}</span>{% endif %}

          {% if section.settings.social_face != blank %}
            <a href="{{ section.settings.social_face }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Facebook">
          {% else %}
            <span class="footer__social-link">
          {% endif %}
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          {% if section.settings.social_face != blank %}</a>{% else %}</span>{% endif %}

          {% if section.settings.social_whats != blank %}
            <a href="https://wa.me/{{ section.settings.social_whats }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="WhatsApp">
          {% else %}
            <span class="footer__social-link">
          {% endif %}
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          {% if section.settings.social_whats != blank %}</a>{% else %}</span>{% endif %}
        </div>
      </div>

      {% comment %} Column 2: Internal Links {% endcomment %}
      <div class="footer__column">
        <h4 class="footer__heading">{{ section.settings.links_heading | default: "Internal links" }}</h4>
        <ul class="footer__links">
          <li>
            <a href="{{ routes.root_url }}" class="footer__link">{{ section.settings.link_home_text | default: "Home" }}</a>
          </li>
          <li>
            <a href="{{ routes.collections_url }}" class="footer__link">{{ section.settings.link_catalog_text | default: "Catalog" }}</a>
          </li>
          <li>
            <a href="/pages/contact" class="footer__link">{{ section.settings.link_contact_text | default: "Contact" }}</a>
          </li>
        </ul>
      </div>

      {% comment %} Column 3: Store Policies {% endcomment %}
      <div class="footer__column">
        <h4 class="footer__heading">{{ section.settings.policies_heading | default: "Store policies" }}</h4>
        <ul class="footer__links">
          <li>
            <a href="{{ section.settings.link_return }}" class="footer__link">{{ section.settings.link_return_text | default: "Return Policy" }}</a>
          </li>
          <li>
            <a href="{{ section.settings.link_delivery }}" class="footer__link">{{ section.settings.link_delivery_text | default: "Delivery policy" }}</a>
          </li>
          <li>
            <a href="{{ section.settings.link_support }}" class="footer__link">{{ section.settings.link_support_text | default: "Support" }}</a>
          </li>
          <li>
            <a href="{{ section.settings.link_terms }}" class="footer__link">{{ section.settings.link_terms_text | default: "Terms and Conditions" }}</a>
          </li>
        </ul>
      </div>

      {% comment %} Column 4: Contact {% endcomment %}
      <div class="footer__column">
        <h4 class="footer__heading">{{ section.settings.contact_heading | default: "Call us" }}</h4>
        <div class="footer__contact">
          {% if section.settings.contact_phone != blank %}
            <a href="tel:{{ section.settings.contact_phone }}" class="footer__contact-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
              </svg>
              <span>{{ section.settings.contact_phone }}</span>
            </a>
          {% endif %}

          {% if section.settings.contact_email != blank %}
            <a href="mailto:{{ section.settings.contact_email }}" class="footer__contact-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
              <span>{{ section.settings.contact_email }}</span>
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    {% comment %} Bottom Bar {% endcomment %}
    <div class="footer__bottom">
      <p class="footer__copyright">&copy; {{ 'now' | date: '%Y' }}, {{ section.settings.copyright_text | default: "Elgawhra" }}</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "header",
      "content": "Footer Logo & Description"
    },
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Description",
      "default": "Elgawhra, the Syrian-Egyptian company is distinguished by providing the best types of coffee, chocolate, nuts and snacks"
    },
    {
      "type": "header",
      "content": "Social Media Links"
    },
    {
      "type": "url",
      "id": "social_insta",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_face",
      "label": "Facebook URL"
    },
    {
      "type": "text",
      "id": "social_whats",
      "label": "WhatsApp Number",
      "placeholder": "+1234567890",
      "info": "Include country code, no spaces or special characters"
    },
    {
      "type": "header",
      "content": "Internal Links"
    },
    {
      "type": "text",
      "id": "links_heading",
      "label": "Links Heading",
      "default": "Internal links"
    },
    {
      "type": "text",
      "id": "link_home_text",
      "label": "Home Link Text",
      "default": "Home"
    },
    {
      "type": "text",
      "id": "link_catalog_text",
      "label": "Catalog Link Text",
      "default": "Catalog"
    },
    {
      "type": "text",
      "id": "link_contact_text",
      "label": "Contact Link Text",
      "default": "Contact"
    },
    {
      "type": "header",
      "content": "Store Policies"
    },
    {
      "type": "text",
      "id": "policies_heading",
      "label": "Policies Heading",
      "default": "Store policies"
    },
    {
      "type": "text",
      "id": "link_return_text",
      "label": "Return Policy Text",
      "default": "Return Policy"
    },
    {
      "type": "url",
      "id": "link_return",
      "label": "Return Policy URL"
    },
    {
      "type": "text",
      "id": "link_delivery_text",
      "label": "Delivery Policy Text",
      "default": "Delivery policy"
    },
    {
      "type": "url",
      "id": "link_delivery",
      "label": "Delivery Policy URL"
    },
    {
      "type": "text",
      "id": "link_support_text",
      "label": "Support Text",
      "default": "Support"
    },
    {
      "type": "url",
      "id": "link_support",
      "label": "Support URL"
    },
    {
      "type": "text",
      "id": "link_terms_text",
      "label": "Terms and Conditions Text",
      "default": "Terms and Conditions"
    },
    {
      "type": "url",
      "id": "link_terms",
      "label": "Terms and Conditions URL"
    },
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "text",
      "id": "contact_heading",
      "label": "Contact Heading",
      "default": "Call us"
    },
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Phone Number",
      "default": "+201554459196"
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Email",
      "default": "support@syrian-egyptian.com"
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Elgawhra"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 48
    }
  ],
  "presets": [
    {
      "name": "t:sections.footer.name"
    }
  ]
}
{% endschema %}
